<div class="card border-primary">
  <div class="card-body">
    <%= form_with model: [:admin, @test, @question], local: true do |form| %>
      <%= render 'shared/errors', resource: @question %>
      <h3>
        <%= form.label :body %>
        <%= form.text_field :body, class: 'form-control' %>
      </h3>

      <%= form.submit class: 'btn btn-primary' %>

    <% end %>
  </div>
</div>
<br><br>
<h3>
  <%= link_to t('admin.questions.show.back_to_test'),
              admin_test_path(@question.test), class: 'btn btn-primary' %>
</h3>
