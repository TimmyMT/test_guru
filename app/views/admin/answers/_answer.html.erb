<tr>
  <th><%= answer.id %></th> |
  <th><%= answer.body %></th> |
  <th><%= answer.correct %></th>
  <br>
  <th>
    <%= link_to t('global_words.show_resource'), admin_answer_path(answer), class: 'btn btn-info' %>
    <%= link_to t('global_words.edit_resource'), edit_admin_answer_path(answer), class: 'btn btn-warning' %>
    <%= link_to t('global_words.delete_resource'),
                admin_answer_path(answer),
                method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
  </th>
</tr>
<br><br>
