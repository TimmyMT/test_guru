<div class="card border-primary">
  <div class="card-body">
    <%= form_with model: [:admin, @question, @answer], local: true do |form| %>
      <%= render 'shared/errors', resource: @answer %>
      <h3>
        <%= form.label :body %>
        <%= form.text_field :body, class: 'form-control' %>
      </h3>

      <%= form.label :correct %>
      <%= form.check_box :correct %>
      <br>
      <%= form.submit %>
    <% end %>
  </div>
</div>
<br>
<h3>
  <%= link_to t('admin.answers.back_to_question'), admin_question_path(@answer.question), class: 'btn btn-primary' %>
</h3>

