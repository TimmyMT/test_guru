<%= form_with model: [:admin, @question, @answer], local: true do |form| %>
  <%= render 'shared/errors', resource: @answer %>
  <h3>
    <%= form.label t('admin.answers._form.answer') %>
    <%= form.text_field :body %>
  </h3>

  <%= form.label t('admin.answers._form.correct') %>
  <%= form.check_box :correct %>
  <br>
  <%= form.submit %>
<% end %>

<h3>
  <%= link_to t('admin.answers.back_to_question'), admin_question_path(@answer.question) %>
</h3>

