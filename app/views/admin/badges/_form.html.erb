<%= form_with model: [:admin, @badge], local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :picture %>
  <%= f.text_field :picture %>
  <br>
  <%= f.label :control %>
  <%= f.select :control, control_collection, include_blank: 'Выберите' %>
  <br>
  <%= f.label :control_param %>
  <%= f.text_field :control_param %>
  <br>
  <%= f.submit %>
<% end %>

